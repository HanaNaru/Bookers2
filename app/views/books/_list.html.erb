    <div class = 'col-md-3'>
      <h2>User info</h2>
      <table class ='table'>
        <tr>
      <%= image_tag user.get_profile_image(100,100) %>
       </tr>
       <tr>
         <th>name</th>
         <th><%= user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= user.introduction %></th>
       </tr>
      </table>

        <div class="row">
	        <a class="btn btn-light btn-block btn-outline-secondary" href="/users/edit">
	          <i class="fa-solid fa-user-gear"></i>
	        </a>
	      </div>

        <h2 class="mt-3">New book</h2>
        <%= form_with model: book, local:true do |f| %>

          <div class="fome-grop">
            <label for="title">Title</label>
            <%= f.text_field :title,class:"form-control",placdhlder:"Title"%>
          </div>

          <div class="fome-grop">
            <label for="Opinion">Opinion</label>
             <%= f.text_area :body,class:"form-control",placdhlder:"Opinion"%>
          </div>

          <div class="fome-grop">
            <%= f.submit 'Create Book' , class:"btn bg-success btn-info mt-4"%>
          </div>

        <% end %>
  </div>
