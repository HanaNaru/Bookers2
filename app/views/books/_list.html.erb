
      <div class="col-md-3">
        <h2>User Info</h2>
              <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image, size: '100x100' %>
              <% else %>
              <%= image_tag 'no_image.jpg', size: '100*100' %>
              <% end %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
	      <a href="/users/edit" class="btn btn-light btn-block btn-outline-secondary" role="button"><i class="fa-solid fa-user-gear"></i></a></div>
      
        <h2>New book</h2>
        <%= form_with model: book, local:true do |f| %>

          <label for="book_title">Title</label><br>
          <%= f.text_field :title %><br>
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' ,class: "btn btn-success" %>
        <% end %>
  </div>