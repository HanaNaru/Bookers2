<% if flash[:notice] %>
<p id="notice"><%= flash[:notice] %></p>
<% end %>
<div class ="container">
  <div class ="row">
    <%= render 'books/list', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
        <h1>User info</h1>
        <table class="table table-user-show">
              <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= image_tag @user.get_profile_image(100,100), format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
              </tbody>
          </table>
    </div>
  </div>
</div>